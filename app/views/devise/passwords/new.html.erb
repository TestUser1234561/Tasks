<div class="grid-center fill-x">
    <div class="grid-center form-container">
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form' }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions" %>
          </div>
            <div id="login-buttons-extra">
                <%= link_to "Sign in", root_path(resource_name) %>
                <%= link_to "Sign Up", new_registration_path(resource_name) %>
                <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, resource_class.omniauth_providers[0]) %>
            </div>
        <% end %>
    </div>
</div>