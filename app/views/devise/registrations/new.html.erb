<div id="container-login">
    <div id="login-grid">
        <h2>Sign up</h2>
        <div id="login-content" style="width: 600px;">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :style => 'width: 600px' }) do |f| %>
              <%= devise_error_messages! %>

                <div class="field" style="grid-template-columns: 12em auto;">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

                <div class="field" style="grid-template-columns: 12em auto;">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <div class="field" style="grid-template-columns: 12em auto;">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up" %>
              </div>
            <% end %>
            <div id="login-buttons-extra">
                <%= link_to "Sign in", new_session_path(resource_name) %>
                <%= link_to "Sign in with Google", omniauth_authorize_path(resource_name, resource_class.omniauth_providers[0]) %>
            </div>
        </div>
    </div>
</div>