<div id="new-task" class="popup invisible">
    <div class="popup-menu">
        <h2>New Task</h2>
        <form class="form" id="new_task" action="javascript:newTask()" accept-charset="UTF-8">

            <div class="error_display invisible-all">
                <h2><span class="error_number"></span> <span class="error_word"></span> are preventing the task from being created!</h2>
                <ul class="errors">
                </ul>
            </div>

            <input type="hidden" name="task[project]" id="task_project" value="<%= @project.id %>" />

            <div class="field">
                <label for="task_title">Title</label>
                <input autofocus="autofocus" type="text" name="task[title]" id="task_title" />
            </div>

            <div class="field">
                <label for="task_description">Description</label>
                <textarea name="task[description]" id="task_description"></textarea>
            </div>

            <div class="field" id="user_field">
                <label for="task_users">Users</label>
                <select class="select" name="task[users][]" multiple="multiple" id="task_users">
                </select>
            </div>

            <div class="field">
                <label for="task_tag_name">Tag</label>
                <input type="text" name="task[tag_name]" id="task_tag_name" list="tag-list"/>
            </div>

            <div class="actions">
                <input type="submit" name="commit" value="Create" id="task_create" />
            </div>
        </form>
    </div>
</div>
